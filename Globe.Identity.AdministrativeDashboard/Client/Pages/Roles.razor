@page "/roles"
@inherits RolesDataModel

<h1>Roles</h1>

<p>All roles registered in the Globe System.</p>

<div class="row">
    <div class="col-md-4">
        <a href='/role/add' class="btn btn-primary" role="button"><i class="fa fa-user-plus"></i> Add Role</a>
    </div>
    <div class="input-group col-md-4 offset-md-4">
        <input type="text" class="form-control" placeholder="Search roles by name" @bind="SearchString" />
        <div class="input-group-append">
            <button class="btn btn-info" @onclick="SearchRoles">
                <i class="fa fa-search"></i>
            </button>
        </div>
    </div>
</div>
<br />

@if (roles == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in roles)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>@role.Description</td>
                    <td>
                        <a href='/role/edit/@role.Id' class="btn btn-outline-dark" role="button">
                            <i class="fa fa-pencil-square-o"></i>
                            Edit
                        </a>
                    </td>
                    <td>
                        <button class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteRoleModal" @onclick="@(() => DeleteRoleConfirm(role))">
                            <i class="oi oi-trash"></i>
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="modal fade" id="deleteRoleModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Confirm Delete !!!</h3>
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">X</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table">
                        <tr>
                            <td>Name</td>
                            <td>@selectedRole?.Name</td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" @onclick="(async () => await DeleteRole(selectedRole))" data-dismiss="modal">Delete</button>
                    <button data-dismiss="modal" class="btn btn-light">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}
