@page "/components/modaldialog"
@inherits ModalDialogDataModel
<div>Test</div>

<div class="modal-open" id="modalDialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">@Title</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                @Message
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                @if (ShowOK)
                {
                    <button class="btn btn-danger" @onclick="(() => HandleButton(ButtonType.OK))" data-dismiss="modal">OK</button>
                }
                @if (ShowCancel)
                {
                    <button class="btn btn-danger" @onclick="(() => HandleButton(ButtonType.Cancel))" data-dismiss="modal">Cancel</button>
                }
                @if (ShowYes)
                {
                    <button class="btn btn-danger" @onclick="(() => HandleButton(ButtonType.Yes))" data-dismiss="modal">Yes</button>
                }
                @if (ShowNo)
                {
                    <button class="btn btn-danger" @onclick="(() => HandleButton(ButtonType.No))" data-dismiss="modal">No</button>
                }
            </div>

        </div>
    </div>
</div>